<Window x:Class="ch.hsr.wpf.gadgeothek.manager.view.GadgetDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.manager.view"
        mc:Ignorable="d"
        Title="Delete File" Height="130" Width="330">
    <Grid>
        <DockPanel>
            
        </DockPanel>
        <StackPanel Margin="10">            
            <Label>Are you sure you want to delete this Gadget?</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 10 0 0">
                <Button Command="{Binding Path=DeleteCommand}" Foreground="#727A8A" Background="#333843" Margin=" 0,0,5,0" Padding="5" BorderThickness="0">Delete</Button>
                <Button Command="{Binding Path=CancelCommand}" Foreground="#727A8A" Background="#333843" Margin=" 0,0,5,0" Padding="5" BorderThickness="0">Abbrechen</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
